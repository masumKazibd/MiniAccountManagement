@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome</h1>
    <p class="lead text-muted">Mini Account Management System Dashboard</p>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title"><i class="fas fa-users-cog me-2"></i>User & Role Management</h5>
                <p class="card-text">Administer user accounts, assign roles, and manage module permissions.</p>
                <div class="mt-auto">
                    <a href="/Admin/ManageUsers" class="btn btn-outline-primary me-2">Manage Users</a>
                    <a href="/Admin/ManageRoles" class="btn btn-outline-primary">Manage Roles</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title"><i class="fas fa-file-invoice-dollar me-2"></i>Financial Management</h5>
                <p class="card-text">Manage the Chart of Accounts and create financial vouchers.</p>
                <div class="mt-auto">
                    <a href="/Accounts/ChartOfAccounts" class="btn btn-outline-success me-2">Chart of Accounts</a>
                    <a href="/Vouchers/Create" class="btn btn-outline-success">Create Voucher</a>
                </div>
            </div>
        </div>
    </div>
</div>
