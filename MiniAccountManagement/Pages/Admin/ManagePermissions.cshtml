@page "{roleId}"
@model MiniAccountManagement.Pages.Admin.ManagePermissionsModel
@{
    ViewData["Title"] = "Manage Permissions";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h4 class="mb-0">Manage Permissions for Role: <span class="text-primary">@Model.ViewModel.RoleName</span></h4>
        </div>
        <div class="card-body">
            <p class="card-text text-muted">Select the modules this role should have access to.</p>

            <form method="post">
                <input type="hidden" asp-for="ViewModel.RoleId" />

                <div class="list-group">
                    @foreach (var module in Model.ViewModel.AvailableModules)
                    {
                        <label class="list-group-item d-flex align-items-center">
                            <input class="form-check-input flex-shrink-0 me-3" type="checkbox"
                                   name="ViewModel.AssignedModules"
                                   value="@module"
                            @(Model.ViewModel.AssignedModules.Contains(module) ? "checked" : "") />
                            <span class="fw-bold">@module</span>
                        </label>
                    }
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save Permissions</button>
                    <a asp-page="./ManageRoles" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>