@using MiniAccountManagement.Models
@model List<AccountNode>

<style>
    .small-btn {
        padding: 2px 4px;
        font-size: 0.6rem;
        line-height: 1;
        border-radius: 3px;
    }

    .accordion-button::after {
        content: none !important;
    }
</style>

@if (Model != null && Model.Any())
{
    <div class="accordion" id="accountAccordion">
        @foreach (var node in Model)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-@node.AccountId">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse-@node.AccountId" aria-expanded="false"
                            aria-controls="collapse-@node.AccountId">
                        <strong>@node.AccountCode - @node.AccountName</strong>
                    </button>
                </h2>

                <div id="collapse-@node.AccountId" class="accordion-collapse collapse" aria-labelledby="heading-@node.AccountId"
                     data-bs-parent="#accountAccordion">
                    <div class="accordion-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group" role="group">
                                <button class="btn btn-outline-success btn-sm small-btn" data-bs-toggle="modal"
                                        data-bs-target="#accountModal" data-action="create-child"
                                        data-parent-id="@node.AccountId">
                                    <i class="fas fa-plus"></i> Add Child
                                </button>
                                <button class="btn btn-outline-primary btn-sm small-btn" data-bs-toggle="modal"
                                        data-bs-target="#accountModal" data-action="edit"
                                        data-account-id="@node.AccountId" data-account-code="@node.AccountCode"
                                        data-account-name="@node.AccountName" data-parent-id="@node.ParentAccountId">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <button class="btn btn-outline-danger btn-sm small-btn" data-bs-toggle="modal"
                                        data-bs-target="#deleteModal" data-account-id="@node.AccountId"
                                        data-account-name="@node.AccountName">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </div>
                        </div>

                        @if (node.Children.Any())
                        {
                            <div class="ms-4">
                                @foreach (var child in node.Children)
                                {
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="heading-@child.AccountId">
                                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                                    data-bs-target="#collapse-@child.AccountId" aria-expanded="false"
                                                    aria-controls="collapse-@child.AccountId">
                                                <strong>@child.AccountCode - @child.AccountName</strong>
                                            </button>
                                        </h2>
                                        <div id="collapse-@child.AccountId" class="accordion-collapse collapse"
                                             aria-labelledby="heading-@child.AccountId" data-bs-parent="#collapse-@node.AccountId">
                                            <div class="accordion-body">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="btn-group" role="group">
                                                        <button class="btn btn-outline-success btn-sm small-btn"
                                                                data-bs-toggle="modal" data-bs-target="#accountModal"
                                                                data-action="create-child" data-parent-id="@child.AccountId">
                                                            <i class="fas fa-plus"></i> Add Child
                                                        </button>
                                                        <button class="btn btn-outline-primary btn-sm small-btn"
                                                                data-bs-toggle="modal" data-bs-target="#accountModal"
                                                                data-action="edit" data-account-id="@child.AccountId"
                                                                data-account-code="@child.AccountCode"
                                                                data-account-name="@child.AccountName"
                                                                data-parent-id="@child.ParentAccountId">
                                                            <i class="fas fa-edit"></i> Edit
                                                        </button>
                                                        <button class="btn btn-outline-danger btn-sm small-btn"
                                                                data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                                data-account-id="@child.AccountId"
                                                                data-account-name="@child.AccountName">
                                                            <i class="fas fa-trash"></i> Delete
                                                        </button>
                                                    </div>
                                                </div>

                                                @if (child.Children.Any())
                                                {
                                                    <div class="ms-4">
                                                        @foreach (var subChild in child.Children)
                                                        {
                                                            <div class="accordion-item">
                                                                <h2 class="accordion-header" id="heading-@subChild.AccountId">
                                                                    <button class="accordion-button" type="button"
                                                                            data-bs-toggle="collapse"
                                                                            data-bs-target="#collapse-@subChild.AccountId"
                                                                            aria-expanded="false"
                                                                            aria-controls="collapse-@subChild.AccountId">
                                                                        <strong>@subChild.AccountCode - @subChild.AccountName</strong>
                                                                    </button>
                                                                </h2>
                                                                <div id="collapse-@subChild.AccountId" class="accordion-collapse collapse"
                                                                     aria-labelledby="heading-@subChild.AccountId"
                                                                     data-bs-parent="#collapse-@child.AccountId">
                                                                    <div class="accordion-body">
                                                                        <div class="d-flex justify-content-between align-items-center">
                                                                            <div class="btn-group" role="group">
                                                                                <button class="btn btn-outline-success btn-sm small-btn"
                                                                                        data-bs-toggle="modal"
                                                                                        data-bs-target="#accountModal"
                                                                                        data-action="create-child"
                                                                                        data-parent-id="@subChild.AccountId">
                                                                                    <i class="fas fa-plus"></i> Add Child
                                                                                </button>
                                                                                <button class="btn btn-outline-primary btn-sm small-btn"
                                                                                        data-bs-toggle="modal"
                                                                                        data-bs-target="#accountModal"
                                                                                        data-action="edit"
                                                                                        data-account-id="@subChild.AccountId"
                                                                                        data-account-code="@subChild.AccountCode"
                                                                                        data-account-name="@subChild.AccountName"
                                                                                        data-parent-id="@subChild.ParentAccountId">
                                                                                    <i class="fas fa-edit"></i> Edit
                                                                                </button>
                                                                                <button class="btn btn-outline-danger btn-sm small-btn"
                                                                                        data-bs-toggle="modal"
                                                                                        data-bs-target="#deleteModal"
                                                                                        data-account-id="@subChild.AccountId"
                                                                                        data-account-name="@subChild.AccountName">
                                                                                    <i class="fas fa-trash"></i> Delete
                                                                                </button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
