@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<title>@ViewData["Title"] - Qtec Solution</title>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link rel="stylesheet" href="~/css/forgotPassword.css" asp-append-version="true" />

<div class="split-screen-container">
    <div class="branding-panel">
        <h1>Qtec Solution Limited </h1>
        <p>Mini Account Management System</p>
    </div>
    <div class="form-panel">
        <div class="form-container">
            <h2>Forgot Your Password?</h2>
            <p class="text-muted">No problem. Enter your email address and we'll send you a link to reset it.</p>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="w-100 btn btn-primary btn-lg action-btn">Send Reset Link</button>
            </form>
            <div class="back-link">
                <a asp-page="./Login"><i class="fas fa-arrow-left me-2"></i>Back to Login</a>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<partial name="_ValidationScriptsPartial" />
